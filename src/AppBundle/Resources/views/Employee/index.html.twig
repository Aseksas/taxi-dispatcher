{% extends 'base.html.twig' %}
{% block title %}{{ "Employee"|trans }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-10">
                <h4>{{ "Employee list"|trans }}</h4>
            </div>
            <div class="col-sm-2 text-right">
                <a href="{{ path('employee_form') }}" class="btn btn-success">Create a new employee</a>
            </div>
            <div class="col-sm-12">
                <table class="table table-bordered table-responsive table-striped">
                    <thead>
                        <tr>
                            <th align="center">#</th>
                            <th>{{ "Username"|trans }}</th>
                            <th>{{ "Email"|trans }}</th>
                            <th>{{ "Roles"|trans }}</th>
                            <th>{{ "Active"|trans }}</th>
                            <th class="text-center">{{ "Actions"|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in collection %}
                        <tr>
                            <td align="center">{{ item.id }}</td>
                            <td>{{ item.username }}</td>
                            <td>{{ item.email }}</td>
                            <td>{{ item.rolesView()|trans }}</td>
                            <td>{% if item.active %}Yes{% else %}No{% endif %}</td>
                            <td class="text-center"><a class="btn btn-sm btn-action btn-success" href="{{ path('employee_form', { 'id': item.id }) }}">{{ "edit"|trans }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
